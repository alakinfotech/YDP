<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:id="@+id/button1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CALLING FROM HTML"
            android:gravity="left|center_vertical"
            ></Button>

    <Button android:id="@+id/button2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CALLING SCRIPT FUNCTION IN HTML FILE"
            android:gravity="left|center_vertical"
            ></Button>

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALLING INLINE SCRIPT FUNCTION" />
 <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CALLING FUN FROM SEP JS FILE" />
    
    <TextView android:id="@+id/myResult"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            ></TextView>
<WebView android:id="@+id/myWebView"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         ></WebView>
</LinearLayout>

