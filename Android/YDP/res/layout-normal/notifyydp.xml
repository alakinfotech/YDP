<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/emailydp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/callydp"
        android:layout_width="100dip"
        android:layout_height="50dip"
        android:layout_alignLeft="@+id/emailydp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginTop="41dp"
        android:background="#6A8FB0"
        android:text="CALL YDP"
        android:textColor="#ffffff" />

    

    <Button
        android:id="@+id/emailydp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_below="@+id/callydp"
        android:layout_marginTop="48dp"
        android:background="#6A8FB0"
        android:text="EMAIL YDP"
        android:textColor="#ffffff" />
    
    <Button
        android:id="@+id/moreaboutydp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_alignRight="@+id/imageView1"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginTop="51dp"
        android:background="#6A8FB0"
        android:text="MORE ABOUT YDP"
        android:textColor="#ffffff" />

</RelativeLayout>