<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alakinfotech.ydp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8" 
                android:targetSdkVersion="16" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.INTERNET"/> 
     
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
         >
        <activity
            android:name="com.alakinfotech.ydp.Splashscreen"
            android:label="@string/icon_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"
                     android:screenOrientation="portrait" 
                     android:noHistory="true"
                     android:configChanges="keyboardHidden|orientation|screenSize" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.alakinfotech.ydp.HOMESCREEN" 	android:screenOrientation="portrait"></activity>
        <activity android:name="com.alakinfotech.ydp.YDPCAREPLAN"   	android:screenOrientation="portrait"></activity>
        <activity android:name="com.alakinfotech.ydp.NOTIFYYDP" 		android:screenOrientation="portrait"></activity>
        <activity android:name="com.alakinfotech.ydp.YDPWEBVIEW" 	android:screenOrientation="portrait"></activity>
        <activity android:name="com.alakinfotech.ydp.EMAILYDP"		android:screenOrientation="portrait"></activity>
        <activity android:name="com.alakinfotech.ydp.UIFORALLERGESDETAILVIEW" android:theme="@style/CustomTheme" 	android:screenOrientation="landscape"></activity>
        <activity android:name="com.alakinfotech.ydp.UIFORCAREPLAN"  		 android:theme="@style/CustomTheme" 	android:screenOrientation="landscape"></activity>
        <activity android:name="com.alakinfotech.ydp.Careplandetailview" 	 android:theme="@style/CustomTheme"  	android:screenOrientation="landscape"></activity>
        
    </application>
  
</manifest>